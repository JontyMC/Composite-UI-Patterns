<UserControl x:Class="WindowManager.Files.TextFileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="white">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label FontSize="24">Pretend this is a text editor...</Label>
            <Button x:Name="MarkAsDirty">
                <TextBlock Text="Mark as dirty" FontSize="24"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>