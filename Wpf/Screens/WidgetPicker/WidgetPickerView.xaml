<UserControl x:Class="Screens.WidgetPicker.WidgetPickerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    DockPanel.Dock="Top">
            <Button x:Name="SwitchToWidget1">Switch to widget 1</Button>
            <Button x:Name="SwitchToWidget2">Switch to widget 2</Button>
        </StackPanel>

        <ContentControl x:Name="ActiveItem" />
    </DockPanel>
</UserControl>