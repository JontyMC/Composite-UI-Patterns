<UserControl x:Class="Model.User.EditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        FontSize="24">
    <StackPanel Margin="10 10 10 10">
        <StackPanel Orientation="Horizontal">
            <Label>Firstname</Label>
            <TextBox x:Name="Firstname" Width="250"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>Lastname</Label>
            <TextBox x:Name="Lastname" Width="250"/>
        </StackPanel>
        <DockPanel>
            <Button x:Name="Save" Width="150" HorizontalAlignment="Right">Save</Button>
            <Button x:Name="TryClose" Width="150" HorizontalAlignment="Right">Cancel</Button>
        </DockPanel>
    </StackPanel>
</UserControl>